
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Patient Tracking Site</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>

        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            display: flex;
        }

        .sidebar {
            width: 250px;
            background-color: #152642;
            color: white;
            min-height: 100vh;
            padding: 1.5rem 1rem;
            position: fixed;
            border-right:4px;
            border-right-style:solid;
            border-right-color:black;
            transition: all 0.3s ease;
            
        }

            .sidebar a {
                color: white;
                display: block;
                padding: 10px 15px;
                margin: 8px 0;
                border-radius: 8px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #1e3a60;
                }

                


        logo-container {
            margin-bottom: 1rem; /* Eskiden 4rem'e denk gelen mb-4 vardı, burada küçültüyoruz */
            text-align: center;
        }

        .logo-img {
            max-width: 140px; /* Daha sabit ve küçük bir genişlik */
            height: auto;
            padding: 0; /* Paddingi kaldırıyoruz */
            display: block;
            margin: 0 auto; /* Ortalansın */
        }

        .main-content {
            margin-left: 250px;
            width: calc(100% - 250px);
            transition: all 0.3s ease;
        }

        .navbar {
            background-color: white;
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #dee2e6;
        }

        .search-box input {
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            background-color: #e9ecef;
        }

        .sidebar.collapsed {
            width: 0;
            padding: 0;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .main-content.collapsed {
            margin-left: 0;
            width: 100%;
            transition: all 0.3s ease;
        }

        .toggle-btn {
            background-color: #1e3a60; /* Koyu mavi */
            color: white;
            border: solid;
            padding: 8px 12px;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

            .toggle-btn:hover {
                background-color: #2d4e7c; /* Hover rengi */
            }
       
    </style>

</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">

        <div class="text-center logo-container">
            <img src="~/images/Logo.png" class="logo-img" />
        </div>


         <div>
            <!-- Profil bilgileri -->          
            
        </div>

        <a href="#"><i class="fas fa-user-md me-2"></i>Doktorlar</a>
        <a href="#"><i class="fa-solid fa-receipt"></i> Reçetelerim</a> <!-- İlaçlarım vb de burda gözükebilir-->
        <a href="#"><i class="fa-solid fa-x-ray"></i> Görüntülerim</a>
        <a href="#"><i class="fas fa-vials me-2"></i>Tahlillerim</a>
        <a href="#"><i class="fa-solid fa-disease"></i> Hastalıklarım</a>
        <a href="#"><i class="fa-solid fa-calendar-days"></i> Randevularım</a>

    </div>

    <!-- Navbar -->

            <!-- Profil link ve ordan çıkış bilgi güncelleme vb  -->
            <!-- Bildirimler kısmı, randevu vb değişebilir, belki hastaya mail gidebilir  -->
            <!-- Change the language  -->



    <!-- Main Content -->
    <div class="main-content">
        <div class="navbar">
            <button class="btn btn-outline-primary toggle-btn">
                <i class="fas fa-bars"></i>
            </button>
            <div class="search-box">   
                <input type="text" placeholder="Merhaba, size nasıl yardım edebilirim?" />
            </div>
            <div class="d-flex align-items-center gap-3">
                <i class="fas fa-bell"></i>
                <i class="fas fa-user-circle"></i>
                <i class="fas fa-globe"></i>
            </div>
        </div>
        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelector('.toggle-btn').addEventListener('click', function () {
            document.querySelector('.sidebar').classList.toggle('collapsed');
            document.querySelector('.main-content').classList.toggle('collapsed');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>