@model List<PatientTrackingSite.Models.Medication>

@{
    ViewData["Title"] = "Medications";
    Layout = "_PatientLayout";
}

<h2 class="mb-4">MyMedications</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Şu anda sistemde sizin için tanımlanmış reçete bulunmamaktadır.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var recete in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@recete.Name</h5>
                        <p><strong>Dozaj:</strong> @recete.Dosage</p>
                        <p><strong>Kullanım Talimatı:</strong> @recete.Instructions</p>
                    </div>
                    <div class="card-footer text-muted text-end">
                        Sisteme doktor tarafından girildi.
                    </div>
                </div>
            </div>
        }
    </div>
}